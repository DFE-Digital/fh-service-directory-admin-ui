@page
@model OfferAtFamiliesPlaceModel
@{
}

@*<a asp-page="/OrganisationAdmin/InPersonWhere" asp-route-strOrganisationViewModel="@Model.StrOrganisationViewModel" class="govuk-back-link">Back</a>*@
<a asp-page="/OrganisationAdmin/InPersonWhere" class="govuk-back-link">Back</a>

<main class="govuk-main-wrapper " id="main-content" role="main">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <form method="post">
                @if (!Model.ValidationValid)
                {
                    <div class="govuk-error-summary" aria-labelledby="error-summary-title" role="alert" data-module="govuk-error-summary">
                        <h2 class="govuk-error-summary__title" id="error-summary-title">
                            There is a problem
                        </h2>
                        <div class="govuk-error-summary__body">
                            <ul class="govuk-list govuk-error-summary__list">
                                <li>
                                    <a href="#Familychoice">You must select one option</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                }
                <div class="govuk-form-group @(Model.ValidationValid == false ? "govuk-form-group--error" : "")">
                    <fieldset class="govuk-fieldset">
                        <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                            <h1 class="govuk-fieldset__heading">
                                Can families choose where they use the service?
                            </h1>
                        </legend>
                        <div id="heading-hint" class="govuk-hint">
                            For example, the family's home or a public place.
                        </div>
                        @{
                            if (Model.ValidationValid == false)
                            {
                                <p class="govuk-error-message">
                                    <span class="govuk-visually-hidden">Error:</span> You must select one option
                                </p>
                            }
                        }
                        <div class="govuk-radios" data-module="govuk-radios">
                            <div class="govuk-radios__item">
                                <input class="govuk-radios__input" id="Familychoice" name="Familychoice" type="radio" value="Yes" data-testid="yes-select" @(Model.Familychoice == "Yes" ? "checked='true'" : "")>
                                <label class="govuk-label govuk-radios__label" for="Familychoice">
                                    Yes, they can choose where
                                </label>
                            </div>
                            <div class="govuk-radios__item">
                                <input class="govuk-radios__input" id="Familychoice2" name="Familychoice" type="radio" value="No" data-testid="no-select" @(Model.Familychoice == "No" ? "checked='true'" : "")>
                                <label class="govuk-label govuk-radios__label" for="Familychoice2">
                                    No, they cannot choose where
                                </label>
                            </div>
                        </div>
                    </fieldset>
                </div>
                <button class="govuk-button" data-testid="button-continue">
                    Continue
                </button>
            </form>
        </div>
    </div>
</main>
