@page
@model FamilyHubs.ServiceDirectoryAdminUi.Ui.Pages.OrganisationAdmin.StartModel
@{
}

@*<a asp-page="/Index" class="govuk-back-link">Back</a>*@

<main class="govuk-main-wrapper govuk-main-wrapper--auto-spacing" id="main-content" role="main">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        <h1 class="govuk-heading-xl">Add details about an organisation to the family hubs local support directory</h1>

        <p>This is for organisations, groups and charities supporting children and families in England.</p>
        <p>Use this to sign in to the directory and add details about the support your organisation offers.</p>

        <div class="govuk-inset-text">
          To use this, your local authority must have approved your application to join the directory.
        </div>
        <a asp-page="/OrganisationAdmin/SignIn" class="govuk-button govuk-button--start" data-module="govuk-button">
            Start now
            <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
              <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z" />
            </svg>
        </a>
        
        <h2 class="govuk-heading-m">Joining the family hubs local support directory</h2>
        <p>The directory is used by families and people working with them.</p>
        <p>Join the directory to:</p>
        <ul class="govuk-list govuk-list--bullet">
          <li>help them find out about the support you offer</li>
          <li>show them how to contact you</li>
          <li>receive requests for support from people working with families</li>
        </ul>
        <p>You can join by contacting your local authority.</p>
      </div>
    </div>
</main>
