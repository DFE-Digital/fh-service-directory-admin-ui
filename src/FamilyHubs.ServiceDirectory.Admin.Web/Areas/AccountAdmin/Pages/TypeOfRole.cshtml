@page
@model TypeOfRole
@{
    ViewData["Title"] = "Type of user";
}

<a asp-page="/welcome" class="govuk-back-link">Back</a>

<main class="govuk-main-wrapper govuk-main-wrapper--auto-spacing" id="main-content" role="main">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <fieldset class="govuk-fieldset">
                <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                    <h1 class="govuk-fieldset__heading">
                        Who are you adding permissions for?
                    </h1>
                </legend>
                <form method="post" novalidate="" data-validate="my-form-validation">
                    <div class="govuk-form-group">
                        <fieldset class="govuk-fieldset">
                            <div class="govuk-radios" data-module="govuk-radios">
                                <div class="govuk-radios__item">
                                    <input class="govuk-radios__input" id="role-for-organisation-type-La" asp-for="RoleForOrganisationType" type="radio" value="LA">
                                    <label class="go vuk-label govuk-radios__label" for="role-for-organisation-type-La">
                                        Someone who works for a local authority
                                    </label>
                                </div>
                                <div class="govuk-radios__item">
                                    <input class="govuk-radios__input" id="role-for-organisation-type-vcs" asp-for="RoleForOrganisationType" type="radio" value="VCS">
                                    <label class="govuk-label govuk-radios__label" for="role-for-organisation-type-vcs">
                                        Someone who works for a voluntary and community sector organisation
                                    </label>
                                </div>
                            </div>

                        </fieldset>
                    </div>
                    <button class="govuk-button">
                        Continue
                    </button>
                </form>
                <script type="application/json" id="my-form-validation"> 
                {
                    "who": {
                        "presence": {
                            "message": "^Select the account you want to create"
                        }
                    }
                }
                </script>
            </fieldset>
        </div>
    </div>
</main>