@page
@model FamilyHubs.ServiceDirectory.Admin.Web.Areas.AccountAdmin.Pages.ConfirmationModel

@{
    Layout = "~/pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Account Confirmed";
}



    <div class="govuk-width-container ">

        <main class="govuk-main-wrapper govuk-main-wrapper--auto-spacing" id="main-content" role="main">


            <div class="govuk-grid-row">
                <div class="govuk-grid-column-two-thirds">
                    <div class="govuk-panel govuk-panel--confirmation">
                        <h1 class="govuk-panel__title">
                            Details confirmed
                        </h1>
                    </div>



                    <h2 class="govuk-heading-m govuk-!-margin-top-6">What happens next</h2>

                    <p class="govuk-body">We have emailed the user with a link to create their password.</p>
                    <p class="govuk-body">They can use their account after they have created their password.</p>
                    <form method="post">
                        <a href="/" class="govuk-button">Go to homepage</a>
                    </form>

                </div>
            </div>


        </main>
    </div>






