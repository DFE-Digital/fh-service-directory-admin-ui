@page
@model UserName
@{
    ViewData["Title"] = "User Name";
}

<a asp-page="/welcome" class="govuk-back-link">Back</a>

<main class="govuk-main-wrapper govuk-main-wrapper--auto-spacing" id="main-content" role="main">


    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">

            <fieldset class="govuk-fieldset">
                <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">


                    @if (!Model.ValidationValid)
                    {
                       <div class="govuk-error-summary" aria-labelledby="error-summary-title" role="alert" tabindex="-1" data-module="govuk-error-summary">
                          <h2 class="govuk-error-summary__title" id="error-summary-title">There is a problem</h2>
                          <div class="govuk-error-summary__body">
                             <ul class="govuk-list govuk-error-summary__list">
                                <li><a href="#fullName">Enter a name</a></li>
                             </ul>
                          </div>
                       </div>
                    }

                    <h1 class="govuk-fieldset__heading">
                        What is the user's full name?
                    </h1>
                </legend>
                <form method="post">

                    <div class="govuk-form-group @(Model.ValidationValid == false ? "govuk-form-group--error" : "")">
                        <label class="govuk-label govuk-visually-hidden" for="fullName">Full name</label>
                        @if (!Model.ValidationValid)
                        {
					        <span class="govuk-error-message">
						        <span class="govuk-visually-hidden">Error:</span>
                                <span asp-validation-for="@Model.FullName"></span>
					        </span>
                        }
                        <input class="govuk-input @(Model.ValidationValid == false ? "govuk-input--error" : "")" id="fullName" asp-for="@Model.FullName" type="text" autocomplete="off">
                    </div>

                    <button class="govuk-button">
                        Continue
                    </button>
                </form>
            </fieldset>
        </div>


    </div>

</main>