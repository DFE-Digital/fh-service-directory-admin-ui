@page "{cacheId}"
@model UserName
@{
    ViewData["Title"] = "What's their full name?";
    var errorCss = Model.HasValidationError ? "govuk-input--error" : string.Empty;
    Model.ErrorElementId = "fullName";
}

<input class="govuk-input @errorCss" id="fullName" asp-for="@Model.FullName" type="text" maxlength="255" autocomplete="off" title="Full Name">