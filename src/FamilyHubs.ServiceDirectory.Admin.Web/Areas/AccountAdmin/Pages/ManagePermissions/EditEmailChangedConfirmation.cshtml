@page "/AccountAdmin/ManagePermissions/{AccountId}/EmailChanged"
@model FamilyHubs.ServiceDirectory.Admin.Web.Areas.AccountAdmin.Pages.ManagePermissions.EditEmailChangedConfirmationModel
@{
    Layout = "~/pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Email address changed";
}

<main class="govuk-main-wrapper govuk-main-wrapper--auto-spacing" id="main-content" role="main">


    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <div class="govuk-panel govuk-panel--confirmation">
                <h1 class="govuk-panel__title">
                    Email address changed
                </h1>
            </div>



            <h2 class="govuk-heading-m govuk-!-margin-top-6">What happens next</h2>

            <p class="govuk-body">
                We've sent

                @Model.UserName
                an email to let them know that their email address has changed.
            </p>
            <p>They will need to create a new GOV.UK One Login with their new email address to access the service. We've told them how to do this.</p>
            <p>They will not lose any information from their account.</p>

            <form method="post">
                <a asp-page="/Welcome" class="govuk-button">Go to homepage</a>
            </form>

        </div>
    </div>


</main>