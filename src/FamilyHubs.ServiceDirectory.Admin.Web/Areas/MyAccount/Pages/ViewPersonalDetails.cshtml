@page
@model ViewPersonalDetails
@{
    ViewData["Title"] = "Manage your account";
}

@section Back {
    <a asp-page="/Welcome" class="govuk-back-link">Back</a>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-l">
            Manage your account
        </h1>

        <summary-list>
            <summary-list-row key="Name" action1="Change" action1-Href="/MyAccount/ChangeName">@Model.FullName</summary-list-row>
        </summary-list>

        <p><a class="govuk-link--no-visited-state" href="@Model.GovOneLoginAccountPage">Manage your GOV.UK One Login details</a></p>

        <p>To delete your account, contact your administrator.</p>
    </div>
</div>