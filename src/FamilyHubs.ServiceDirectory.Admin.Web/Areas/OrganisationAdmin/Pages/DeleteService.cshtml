@page
@model FamilyHubs.ServiceDirectory.Admin.Web.Areas.OrganisationAdmin.Pages.DeleteServiceModel
@{
    ViewData["Title"] = "Delete Service";
}
<a asp-page="/OrganisationAdmin/ViewServices" class="govuk-back-link">Back</a>

<main class="govuk-main-wrapper govuk-main-wrapper--auto-spacing" id="main-content" role="main">


    <form method="post">
        
        <input asp-for="@Model.Service.Id" type="hidden">

        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <h1 class="govuk-heading-l">Deleting a service</h1>
                <p>Deleting a service stops it from showing in the directory and getting connections.</p>
                <p>You cannot get the service back after you delete it. You will not lose existing connections.</p>
                @if (Model.ValidationValid == false)
                {
                    <div class="govuk-error-summary" aria-labelledby="error-summary-title" role="alert" data-module="govuk-error-summary">
                        <h2 class="govuk-error-summary__title" id="error-summary-title">
                            There is a problem
                        </h2>
                        <div class="govuk-error-summary__body">
                            <ul class="govuk-list govuk-error-summary__list">
                                <li>
                                    <a href="#">Please select one option</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                }
                <div class="govuk-form-group">
                    <fieldset class="govuk-fieldset">
                        <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">
                            <h1 class="govuk-fieldset__heading">
                                Do you want to delete @Model.Service.Name?
                            </h1>
                        </legend>
                        <div class="govuk-radios" data-module="govuk-radios">
                            
                            @foreach (var option in Model.SelectOptions)
                            {
                                <div class="govuk-radios__item">
                                    <input class="govuk-radios__input" asp-for="SelectedOption" type="radio" value="@option" aria-controls="age-range">
                                    <label class="govuk-label govuk-radios__label" asp-for="SelectOptions" >
                                        @option
                                    </label>
                                </div>
                            }
                            
                        </div>
                    </fieldset>
                </div>
                <button class="govuk-button">Confirm</button>
            </div>
        </div>
    </form>


</main>